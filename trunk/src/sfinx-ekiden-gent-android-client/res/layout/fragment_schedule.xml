<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sfinxekidengent="http://schemas.android.com/apk/res/be.sfinxekidengent"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<be.sfinxekidengent.ui.widget.SwipeyTabs
		android:id="@+id/viewpagerheader"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		sfinxekidengent:bottomBarColor="@color/accent_1"
		sfinxekidengent:bottomBarHeight="3dip"
		sfinxekidengent:tabIndicatorHeight="3dip"
		android:background="@drawable/thickbar_shadow" />
	
	<android.support.v4.view.ViewPager
	    android:id="@+id/viewpager"
	    android:layout_width="fill_parent"
	    android:layout_height="0px"
	    android:layout_weight="1"
	    android:background="@color/sfinx_ekiden_gent_theme" />
	    
</LinearLayout>
